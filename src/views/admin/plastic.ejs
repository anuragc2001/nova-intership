<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/admin.head.ejs') %>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <%- include('../partials/admin.spinner.ejs') %>
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a href="/dashboard" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>ADMIN</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="./images/admin/user.jpg" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0"><%=u_name%></h6>
                        <span>Admin</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a href="/dashboard" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    
                    <a href="/stainless" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Stainless</a>
                    <a href="/plastic" class="nav-item nav-link active"><i class="fa fa-keyboard me-2"></i>Plastic</a>
                    <a href="/loft" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Loft</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Pages</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="signin.html" class="dropdown-item">Sign In</a>
                            <a href="signup.html" class="dropdown-item">Sign Up</a>
                            <a href="404.html" class="dropdown-item">404 Error</a>
                            <a href="blank.html" class="dropdown-item">Blank Page</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <%- include('../partials/admin.navbar.ejs') %>
            <!-- Navbar End -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">Plastic Tank</h6>
                        <form action="/addp" method="GET">
                            <button class="btn btn-sm btn-success">Add</button>
                        </form>
                        <a href="">Show All</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-dark">
                                    <th scope="col"><input class="form-check-input" type="checkbox"></th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Diameter</th>
                                    <th scope="col">Height</th>
                                    <th scope="col">Capacity</th>
                                    <th scope="col">Layers</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%p_data.forEach((tank) => {%>
                                    <tr>
                                        <td><input class="form-check-input" type="checkbox"></td>
                                        <td><%=tank.category%></td>
                                        <td><%=tank.diameter%></td>
                                        <td><%=tank.height%></td>
                                        <td><%=tank.capacity%></td>
                                        <td><%=tank.layer%></td>
                                        <td>
                                            <form action="/viewp" method="POST">
                                                <button class="btn btn-sm btn-primary" name="id" value="<%=tank._id%>">View</button>
                                            </form>
                                            <form action="/addp" method="GET">
                                                <button class="btn btn-sm btn-success">Add</button>
                                            </form>
                                            <form action="/updatep" method="POST">
                                                <button class="btn btn-sm btn-warning" name="id" value="<%=tank._id%>">Update</button>
                                            </form>
                                            <form action="/deletep" method="POST">
                                                <button class="btn btn-sm btn-danger" name="id" value="<%=tank._id%>">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <%})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Footer Start -->
            <%- include('../partials/admin.footer.ejs') %>
</body>

</html>