<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/admin.head.ejs') %>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <%- include('../partials/admin.spinner.ejs') %>
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a href="/dashboard" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>ADMIN</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="./images/admin/user.jpg" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0"><%=u_name%></h6>
                        <span>Admin</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a href="/dashboard" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <a href="/stainless" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Stainless</a>
                    <a href="/plastic" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Plastic</a>
                    <a href="/loft" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Loft</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Pages</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="signin.ejs" class="dropdown-item">Sign In</a>
                            <a href="signup.ejs" class="dropdown-item">Sign Up</a>
                            <a href="404.ejs" class="dropdown-item">404 Error</a>
                            <a href="blank.ejs" class="dropdown-item">Blank Page</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <%- include('../partials/admin.navbar.ejs') %>
            <!-- Navbar End -->


            <!-- Form Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Loft Tank Form</h6>
                            <form action="/addl" method="post">
                                <select class="form-select mb-3" aria-label="Default select example" name="category" required>
                                    <option selected value="L">Loft</option>
                                </select>
                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Length</label>
                                    <div class="col-sm-10">
                                        <input type="number" name="lengths" class="form-control" id="inputEmail3" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Width</label>
                                    <div class="col-sm-10">
                                        <input type="number" name="width" class="form-control" id="inputPassword3" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Height</label>
                                    <div class="col-sm-10">
                                        <input type="number" name="height" class="form-control" id="inputEmail3" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Thickness</label>
                                    <div class="col-sm-10">
                                        <input type="number" name="thickness" class="form-control" id="inputPassword3" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Capacity</label>
                                    <div class="col-sm-10">
                                        <input type="number" name="capacity" class="form-control" id="inputPassword3" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Stand Material</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="standMaterial" class="form-control" id="inputPassword3" required>
                                    </div>
                                </div>
                                <button class="btn btn-primary w-100 m-2" type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Form End -->


            <!-- Footer Start -->
            <%- include('../partials/admin.footer.ejs') %>
</body>

</html>